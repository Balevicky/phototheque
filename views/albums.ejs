<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head.ejs") %>
</head>

<body>
    <%- include("partials/nav") %>
<div class="container">
    <div class="row mt4">
        <h1>
            Mes albums <br>
            <a href="/albums/create" class="btn btn-primary mt-2 mb-4">
                Nouvel album
            </a>
        </h1>
    </div>
    <div class="row">
        <div class="col col-xs-12 col-sm-4">
            <ul class="list-group">
                <% albums.map((album)=>{%>

                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="/albums/<%= album._id %>">
                            <%= album.title %>(<%= album.images.length %>)
                        </a>
                        <a href="/albums/<%= album._id %>/delete" class="link-light badge bg-danger rounded-pill">Supprimer</a>

                    </li>
                    <% }) %>
            </ul>
        </div>
    </div>

</div>


    <%- include("./partials/scripts") %>

</body>

</html>